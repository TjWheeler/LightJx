{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es2017", "es7", "es6", "dom"],
      "esModuleInterop": true,
      "strict": true,
      "rootDir": "src",
      "outDir": "build",
      "sourceMap": true,
      "moduleResolution": "node",
      "removeComments": false,
      "preserveConstEnums": true,
      "noImplicitAny": true,
      "declaration": true,
    },
    "include": ["src", "../__tests__"],
  }
